		<profiles>
			<profile>
				<id>jahia6</id>
				<activation>
					<activeByDefault>false</activeByDefault>
				</activation>
				<properties>
					<project.packaging>war</project.packaging>
					<jahia.version>6.6.2.7</jahia.version>
				</properties>
			</profile>
			<profile>
				<id>jahia7</id>
				<activation>
					<activeByDefault>false</activeByDefault>
				</activation>
				<properties>
					<project.packaging>bundle</project.packaging>
