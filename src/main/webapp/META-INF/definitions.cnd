<jnt = 'http://www.jahia.org/jahia/nt/1.0'>
<jmix = 'http://www.jahia.org/jahia/mix/1.0'>

//mixin generique
[jmix:esigateComponent] mixin

[jmix:esigateGenericComponent] mixin
+ * (jmix:droppableContent) = jmix:droppableContent 

[jmix:esigateTemplatePage] mixin
    extends = jnt:page
- doExecute (boolean) = false
- provider (string)
- src (string) mandatory

//Syntaxe ESI

//mixin pour les representations esi
[jmix:esigateEsi] > jmix:droppableContent, mix:title, jmix:esigateComponent mixin

[gnt:esigateIncludeEsi] > jnt:content, jmix:esigateEsi, jmix:esigateGenericComponent
- provider (string)
- src (string)
- fragment (string)
- alt (string)
- continueOnError (boolean) = false
- rewriteAbsoluteUrl (boolean) = false
- styleSheet (string)
- xpath (string)

[gnt:esigateReplaceEsi] > jnt:content, jmix:esigateEsi, jmix:esigateGenericComponent
- fragment (string)
- expression (string)

[gnt:esigateFragmentEsi] > jnt:content, jmix:esigateEsi, jmix:esigateGenericComponent
- fragmentName (string) mandatory

[gnt:esigateInlineEsi] > jnt:content,jmix:esigateEsi, jmix:esigateGenericComponent
- fragmentName (string) mandatory
- fetchable (boolean) = false

// Control section : try/catch, if/then/else
[jmix:esigateEsiControl] > jmix:droppableContent, jmix:esigateComponent, mix:title mixin

[gnt:esigateAttemptEsi] > jnt:content, jmix:esigateGenericComponent

[gnt:esigateExceptEsi] > jnt:content, jmix:esigateGenericComponent
- code (string) mandatory

[gnt:esigateExceptEsiList] > jnt:content, jmix:list
+ * (gnt:esigateExceptEsi) = gnt:esigateExceptEsi

[gnt:esigateTryEsi] > jnt:content, jmix:esigateEsiControl
+ attemptPart (gnt:esigateAttemptEsi) = gnt:esigateAttemptEsi autocreated
+ exceptPartList (gnt:esigateExceptEsiList) = gnt:esigateExceptEsiList autocreated

[gnt:esigateWhenEsi] >  jnt:content, jmix:esigateGenericComponent
- test (string) mandatory

[gnt:esigateWhenEsiList] > jnt:content, jmix:list
+ * (gnt:esigateWhenEsi) = gnt:esigateWhenEsi

[gnt:esigateOtherwiseEsi] >  jnt:content, jmix:esigateGenericComponent

[gnt:esigateChooseEsi] > jnt:content, jmix:esigateEsiControl
+ whenList (gnt:esigateWhenEsiList) = gnt:esigateWhenEsiList autocreated
+ otherwise (gnt:esigateOtherwiseEsi) = gnt:esigateOtherwiseEsi autocreated

[gnt:esigateCommentEsi] > jnt:content, jmix:esigateEsiControl
- text (string) mandatory

[gnt:esigateRemoveEsi] > jnt:content, jmix:esigateEsiControl, jmix:esigateGenericComponent

[gnt:esigateVarsEsi] > jnt:content, jmix:esigateEsiControl, jmix:esigateGenericComponent

[gnt:esigateHtmlCommentEsi] > jnt:content, jmix:esigateEsiControl, jmix:esigateGenericComponent

